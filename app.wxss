/**app.wxss**/
@import "./colorui/main.wxss";
@import "./colorui/icon.wxss";
page{
  background: #151722;
  color: #fff;
}
view{
  word-break: break-all;
}
.foot{
  background: #151722!important;
}
.flex{
  display: flex;
}
.flex-around{
  display: flex;
  justify-content: space-around;
}
.flex-between{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.flex-justify{
  justify-content: center;
}
.flex-align{
  align-items: center;
}
.flex-center{
  display: flex;
  justify-content: center;
  align-items: center;
}
.ellipsis{
  overflow:hidden;
	text-overflow:ellipsis;
	white-space:nowrap
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: space-between;
  padding:0;
  box-sizing: border-box;
  background:#151722;
}
.title{
  margin:20rpx 50rpx;
}
.hr{
  border-top: 1px solid #ddd;
  margin: 20rpx 50rpx;
}
