/* pages/my/my.wxss */
.my_topCon{
  display: flex;
  justify-content: space-between;
  margin:10rpx 0;
  padding: 10rpx 0;
}
.my_topCon>view:nth-child(1){
  white-space:nowrap;
}
.userinfo {
  vertical-align: middle;
  display: inline-block;
}
.signBtn{
  vertical-align: middle;
  display: inline-block;
  font-size: 35rpx;
}
.loginBtn{
  border: 0;
  background: #07c160;
  color: #fff;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 25rpx;
  overflow: hidden;
  display: inline-block;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 35rpx;
  display: inline-block;
  vertical-align: middle;
}
.ques{
  color: #E6BF72;
  border: 1px solid #A8986D;
  background: #484D58;
  border-radius: 50%;
  display: inline;
  padding: 0 8rpx;
  margin-left: 6rpx;
}
.ach-range{
  color: #E6BF72;
  border: 1px solid #A8986D;
  font-size: 24rpx;
  padding: 5rpx;
  background: #484D58;
  height: 46rpx;
}
.continueSign{
  font-size: 20rpx;
  margin: 0;
  padding: 0;
  line-height: 1;
}
.address{
  min-width: 300rpx;
  border: 1px solid #ddd;
}
.msgboard{
  width: 100%;
  border: 1px solid #ddd;
  padding: 20rpx;
  border-radius: 10rpx;
}
.msglen{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}