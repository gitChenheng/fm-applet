button{
  font-size: 28rpx;
}
.condition{
  background: #31394D;
  margin: 30rpx;
  border-radius: 30rpx;
  padding: 30rpx;
  position: absolute;
  z-index: 1;
  width: 690rpx;
}
.condition-mask{
  position:absolute;width:100%;height:100%;z-index:1
}
.condition>view{
  margin-bottom: 30rpx;
}
.condition-title{
  color: #fff;
  font-size: 35rpx;
  font-weight: 700;
  margin-bottom: 30rpx;
}
.condition-con{
  color: #474748;
  display: flex;
  flex-wrap:wrap;
}
.condition-con>text:nth-child(1){
  color: #fff;
  background: #4684FD;
}
.condition-con>text{
  background: #fff;
  text-align: center;
  margin-right: 20rpx;
  border-radius: 5rpx;
  padding: 5rpx 30rpx;
  margin-bottom: 20rpx;
}
.condition-con>text:last-child{
  margin-right: 0;
}
.condition-unchecked{
  background: #fff!important;
  color: #000!important;
}
.condition-checked{
  color: #fff;
  background: #4684FD!important;
}




.info_block{
  position: relative;
  background: #202531;
  border-radius: 30rpx;
  margin-bottom: 25rpx;
  padding: 15rpx 30rpx;
}
.info_block_view{
  padding: 20rpx 0;
  display: flex;
  /* border-top: 1px solid #ddd; */
}
.info_block_view_fr{
  width: 140rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
.info_block_view:first-child{
  border-top: none
}
.info_block_view_img{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}
.info_block_view_view{
  width:550rpx;
}
.line{
  display: flex;
  justify-content: space-between;
  margin:10rpx 0 15rpx;
}


.knock_section>picker{
  padding: 10rpx;
  margin: 10rpx;
  border: 1px solid #ddd
}
.knock_section>button{
  margin: 10rpx;
}

.knock-btn{
  background:#D81E06;
  position:fixed;
  bottom:180rpx;
  z-index:1;
  color:#fff;
  right: 10%;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  font-size: 20rpx;
}
.knock-btn>image{
  width: 65rpx;
  height:65rpx;
  margin:15rpx auto 0;
  display: block;
}
.search-input{
  background:#4684FD!important;
  color:#fff!important;
  border-radius: 50rpx;
  padding: 0 28rpx;
  height: 70rpx!important;
}
.search-input-placeholder{
  color:#fff;
}
.search-btn{
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}


.started{
  width: 110rpx;
  text-align: center;
  color: #fff;
  border:1px solid #25BD6C;
  font-size: 24rpx;
  padding: 5rpx;
  background: #25BD6C;
}
.notNow{
  width: 110rpx;
  text-align: center;
  color: #B8B8B9;
  border:1px solid #fff;
  font-size: 24rpx;
  padding: 5rpx;
  background: #fff;
}