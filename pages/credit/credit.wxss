.tabCon{
  padding: 20rpx 50rpx;
}
.gameBox{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;
  height: 650rpx;
}
.gameBox>view{
  width: 216rpx;
  height:216rpx;
  position: relative;
}
.gameBoxBg{
  width: 216rpx;
  height: 216rpx;
  position: absolute;
  left: 0;
  top: 0;
  border: 1px solid #000;
  border-radius: 20rpx;
}
.gameBoxMask{
  width: 216rpx;
  height: 216rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: #000;
  opacity: .5;
}
.gameBlock{
  background: gray;
  color: #000;
  text-align: center;
  line-height: 216rpx;
  border-radius: 20rpx;
}
.gameCurr{
  background: #4684FD;
  border-color: #4684FD;
  color: #fff;
}
.gameBox>view:nth-child(4){
  position: absolute;
  right: 2rpx;
  top: 216rpx;
}
.gameBox>view:nth-child(5){
  position: absolute;
  right: 2rpx;
  top: 432rpx;
}
.gameBox>view:nth-child(6){
  position: absolute;
  right: 218rpx;
  top: 432rpx;
}
.gameBox>view:nth-child(7){
  position: absolute;
  left: 0;
  top: 432rpx;
}
.gameBox>view:nth-child(8){
  position: absolute;
  left: 0;
  top: 216rpx;
}

.lottery-block{
  display: flex;
  margin-bottom: 10rpx;
}
.lottery-img{
  width: 200rpx;
  height:200rpx;
  border-radius: 6rpx;
}
.lottery-block>view{
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.lottery-title{
  font-size: 30rpx;
}
.lottery-btn{
  width: 210rpx;
}




.general-block{
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}
.general-block>view{
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  height: 200rpx;
  justify-content: space-around;
}
.general-img{
  width: 200rpx;
  height:200rpx;
}
.general-name{
  font-size: 36rpx;
}
.general-credit{
  font-size: 24rpx;
}

.reward-content{
  padding: 0 30rpx 20rpx;
}
