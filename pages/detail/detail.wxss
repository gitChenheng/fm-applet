.detail-content{
  width:700rpx;
  margin:25rpx;
  background: #202531;
  border-radius: 30rpx;
  padding: 15rpx 30rpx 30rpx;
}



.info_block_view{
  padding: 20rpx 0;
  display: flex;
}
.info_block_view_fr{
  width: 140rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
.info_block_view_img{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}
.info_block_view_view{
  width:550rpx;
}
.line{
  display: flex;
  justify-content: space-between;
  margin:10rpx 0 15rpx;
}

.middle-lv{
  margin: 20rpx 0;
  padding: 20rpx;
}
.middle-lv>view{
  display: flex;
  /* justify-content:space-between;  */
}

.details{
  padding: 20rpx;
  min-height: 300rpx;
}

.bottom-lv{
  padding: 20rpx;
  border: 1px solid #303442;
  background:#202531;
  margin-bottom: 50rpx;
}
.comment{
  border:0;
  width:550rpx;
  border-radius:50rpx;
  padding:5rpx 20rpx;
  display:inline-block;
  vertical-align:middle;
  font-size:34rpx;
  background:#202531;

}
.conf{
  display: inline-block;
  vertical-align: middle;
  padding: 0 40rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
}

.bottom{
  padding: 20rpx 0;
  display: flex;
  align-items: flex-start;
}
.bottom-name{
  margin-left: 20rpx;
  font-size: 34rpx;
}
.bottom>text,.bottom>image{
  vertical-align: middle;
}
.bottom-content{
  margin-left: 20rpx;
  font-size: 34rpx;
  color: #8C8CA4;
}
.bottom-time{
  margin-left: 20rpx;
  font-size: 28rpx;
  margin-top: 25rpx;
  display: block;
  color: #8C8CA4;
}


.started{
  width: 110rpx;
  text-align: center;
  color: #fff;
  border:1px solid #25BD6C;
  font-size: 24rpx;
  padding: 5rpx;
  background: #25BD6C;
}
.notNow{
  width: 110rpx;
  text-align: center;
  color: #B8B8B9;
  border:1px solid #fff;
  font-size: 24rpx;
  padding: 5rpx;
  background: #fff;
}
.uploadImg{
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #ddd;
  border-radius: 4rpx;
  margin: 20rpx;
}
.link{
  vertical-align: middle;
  line-height: 2;
  margin-right: 20rpx;
}
.copy{
  white-space: nowrap;
}
.copy-content{
  display: flex;
  justify-content: space-between;
}
.bigImg{
  width: 500rpx;
  height: 700rpx;
  margin: 20rpx 0;
}